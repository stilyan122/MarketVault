@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="registerContainer">
    <h1>@ViewData["Title"]</h1>

    <div>
        <div>
            <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post"
                  class="registerFormContainer">
                <h2>Create a new account.</h2>
                <div asp-validation-summary="ModelOnly"></div>
                <div class="inputRegisterContainer">
                    <div>
                        <label asp-for="Input.FirstName"></label>
                        <input asp-for="Input.FirstName" autocomplete="first-name"
                               aria-required="true" />
                    </div>
                    
                    <span asp-validation-for="Input.FirstName"></span>
                </div>
                <div class="inputRegisterContainer">
                    <div>
                        <label asp-for="Input.LastName"></label>
                        <input asp-for="Input.LastName" autocomplete="last-name"
                               aria-required="true" />
                    </div>
                    <span asp-validation-for="Input.LastName"></span>
                </div>
                <div class="inputRegisterContainer">
                    <div>
                        <label asp-for="Input.Email"></label>
                        <input asp-for="Input.Email" autocomplete="username"
                               aria-required="true" />
                    </div>
                    <span asp-validation-for="Input.Email"></span>
                </div>
                <div class="inputRegisterContainer">
                    <div>
                        <label asp-for="Input.Password"></label>
                        <input asp-for="Input.Password" autocomplete="new-password"
                               aria-required="true" />
                    </div>
                    <span asp-validation-for="Input.Password"></span>
                </div>
                <div class="inputRegisterContainer">
                    <div>
                        <label asp-for="Input.ConfirmPassword"></label>
                        <input asp-for="Input.ConfirmPassword" autocomplete="new-password"
                               aria-required="true" />
                    </div>
                    <span asp-validation-for="Input.ConfirmPassword"></span>
                </div>
                <button id="registerSubmit" type="submit">Register</button>
            </form>
        </div>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}