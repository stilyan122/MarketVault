                        </li>
                        <li>
                            <a asp-area=""
                               asp-controller="Home" asp-action="FAQ">FAQ</a>
                        </li>
                        @if (isLoggedIn)
                        {
                            if (role == "Admin")
                            {
                                <a asp-area="Admin"
                                   asp-action="Index"
