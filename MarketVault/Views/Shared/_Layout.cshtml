                                        <option value="Option4">Firms</option>
                                        <option value="Option5">Banks</option>
                                        <option value="Option6">Addresses</option>
                                    </select>
                                </li>
                                <li>
                                    <select id="selectOption2">
                                        <option disabled selected value="">Add Nomenclature</option>
                                        <option value="Option1">Add a product</option>
                                        <option value="Option2">Add a counter party</option>
                                        <option value="Option3">Add an item group</option>
                                        <option value="Option4">Add a firm</option>
                                        <option value="Option5">Add a bank</option>
                                        <option value="Option6">Add an address</option>
                                    </select>
                                </li>

                                <li>
                                    <select id="selectOption3">
                                        <option disabled selected value="">Operations</option>
                                        <option value="Option1">Add operation</option>
                                        <option value="Option2">Your operations</option>
                                    </select>
                                </li>
                            }
                            else if (role == "Worker")
                            {
                                <li>
                                    <select id="selectOption">
                                        <option disabled selected value="">Nomenclatures</option>
                                        <option value="Option1">Products</option>
                                        <option value="Option2">Counter Parties</option>
                                        <option value="Option3">Item Groups</option>
                                        <option value="Option4">Firms</option>
                                        <option value="Option5">Banks</option>
                                        <option value="Option6">Addresses</option>
                                    </select>
                                </li>
                                <li>
                                    <select id="selectOption2">
                                        <option disabled selected value="">Add Nomenclature</option>
                                        <option value="Option1">Add a product</option>
                                        <option value="Option2">Add a counter party</option>
                                        <option value="Option3">Add an item group</option>
                                        <option value="Option4">Add a firm</option>
                                        <option value="Option5">Add a bank</option>
                                        <option value="Option6">Add an address</option>
                                    </select>
                                </li>

                                <li>
                                    <select id="selectOption3">
                                        <option disabled selected value="">Operations</option>
                                        <option value="Option1">Add operation</option>
                                        <option value="Option2">Your operations</option>
                                    </select>
                                </li>

                            }
                            else
                            {
                                <li>
                                    <select id="selectOption">
                                        <option disabled selected value="">Nomenclatures</option>
                                        <option value="Option1">Products</option>
                                        <option value="Option2">Counter Parties</option>
                                        <option value="Option3">Item Groups</option>
                                    </select>
                                </li>
                            }
                        }
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main">
            @RenderBody()
        </main>
    </div>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

<script>
    document.getElementById("selectOption").addEventListener("change", function () {
        var optionValue = this.value;
        if (optionValue === "Option1") {
            window.location.href = "/Product/All";
        } else if (optionValue === "Option2") {
