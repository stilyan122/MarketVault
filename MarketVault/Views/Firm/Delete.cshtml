@model FirmDeleteFormModel

@{
    ViewBag.Title = "Delete firm";
}

<div class="deleteFirmContainer">
    <form asp-action="Delete"
          asp-controller="Firm"
          id="deleteFirmForm"
          method="post"
          asp-route-id="@Model.Id">
        <div class="deleteFirmInfoContainer">
            <label asp-for="Name">Firm name</label>
            <h4>@Model.Name</h4>
        </div>
        <div class="deleteFirmInfoContainer">
            <label asp-for="Email">Firm email</label>
            <h4>@Model.Email</h4>
        </div>
        <div class="deleteFirmInfoContainer">
            <label asp-for="PhoneNumber">Firm phone number</label>
            <h4>@Model.PhoneNumber</h4>
        </div>
        <div class="deleteFirmInfoContainer">
            <label asp-for="ResponsiblePersonName">Firm responsible person name</label>
            <h4>@Model.ResponsiblePersonName</h4>
        </div>
        <div class="deleteFirmInfoContainer">
            <label asp-for="Address">Firm address</label>
            <h4>@Model.Address</h4>
        </div>

        <p class="areYouSureMessage">
            Are you sure you want to remove firm? If no,
            <a asp-action="All" asp-controller="Firm">back to all firms</a>
        </p>

        <div class="submitFirmDeleteBtnContainer">
            <button type="submit">Delete Firm</button>
        </div>
    </form>
</div>